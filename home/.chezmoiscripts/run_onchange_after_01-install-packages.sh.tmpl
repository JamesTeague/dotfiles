#!/bin/bash

# exist checks if a command exist in shell
exist() {
  command -v "$1" >/dev/null 2>&1
}

info () {
  printf "\r  [ \033[00;34m..\033[0m ] $1\n"
}

user () {
  printf "\r  [ \033[0;33m??\033[0m ] $1\n"
}

success () {
  printf "\r\033[2K  [ \033[00;32mOK\033[0m ] $1\n"
}

fail () {
  printf "\r\033[2K  [\033[0;31mFAIL\033[0m] $1\n"
  echo ''
  exit
}

info "Pouring Brew..."

if exists brew
then
  info "Updating Homebrew..."
  brew update
else
  info "Installing Homebrew for you."

  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
  {{ if eq .chezmoi.os "darwin" -}}
  echo 'eval "$(/opt/homebrew/bin/brew shellenv)"' >> $(echo $HOME)/.zprofile
  eval "$(/opt/homebrew/bin/brew shellenv)"
  {{ else if eq .chezmoi.os "linux" -}}
  echo 'eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"' >> $(echo $HOME)/.zprofile 
  eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
  {{ end -}}
fi

brew bundle --no-lock --file=/dev/stdin <<EOF

# Add Core Taps
{{ range .packages.core.taps -}}
tap {{ . | quote }}
{{ end -}}

# Add darwin taps
{{ if eq .chezmoi.os "darwin" -}}
  {{ range .packages.darwin.taps -}}
    tap {{ . | quote }}
  {{ end -}}

  {{ if .personal -}}
    {{ range .packages.personal.darwin.taps -}}
      tap {{ . | quote }}
    {{ end -}}
  {{ else }}
    {{ range .packages.work.darwin.taps -}}
      tap {{ . | quote }}
    {{ end -}}
  {{ end -}}
{{ end -}}

# Add linux taps
{{ if eq .chezmoi.os "linux" -}}
  {{ range .packages.linux.taps -}}
    tap {{ . | quote }}
  {{ end -}}

  {{ if .personal -}}
    {{ range .packages.personal.linux.taps -}}
      tap {{ . | quote }}
    {{ end -}}
  {{ else }}
    {{ range .packages.work.linux.taps -}}
      tap {{ . | quote }}
    {{ end -}}
  {{ end -}}
{{ end -}}

# Add Core Brews
{{ range .packages.core.brews -}}
  brew {{ . | quote }}
{{ end -}}

# Add Darwin Brews
{{ if eq .chezmoi.os "darwin" -}}
  {{ range .packages.darwin.brews -}}
    brew {{ . | quote }}
  {{ end -}}

  {{ if .personal -}}
    {{ range .packages.personal.darwin.brews -}}
      tap {{ . | quote }}
    {{ end -}}
  {{ else }}
    {{ range .packages.work.darwin.brews -}}
      tap {{ . | quote }}
    {{ end -}}
  {{ end -}}
{{ end -}}

# Add Linux Brews
{{ if eq .chezmoi.os "linux" -}}
  {{ range .packages.linux.brews -}}
    brew {{ . | quote }}
  {{ end -}}

  {{ if .personal -}}
    {{ range .packages.personal.linux.brews -}}
      tap {{ . | quote }}
    {{ end -}}
  {{ else }}
    {{ range .packages.work.linux.brews -}}
      tap {{ . | quote }}
    {{ end -}}
  {{ end -}}
{{ end -}}

# Add Core Casks
{{ if not .headless -}}
  {{ range .packages.core.casks -}}
    cask {{ . | quote }}
  {{ end -}}

  # Add Darwin Casks
  {{ if eq .chezmoi.os "darwin" -}}
    {{ range .packages.darwin.casks -}}
      cask {{ . | quote }}
    {{ end -}}

    {{ if .personal -}}
      {{ range .packages.personal.darwin.casks -}}
        cask {{ . | quote }}
      {{ end -}}
    {{ else }}
      {{ range .packages.work.darwin.casks -}}
        cask {{ . | quote }}
      {{ end -}}
    {{ end -}}
  {{ end -}}

  # Add Linux Casks
  {{ if eq .chezmoi.os "linux" -}}
    {{ range .packages.linux.casks -}}
      cask {{ . | quote }}
    {{ end -}}

    {{ if .personal -}}
      {{ range .packages.personal.linux.casks -}}
        tap {{ . | quote }}
      {{ end -}}
    {{ else }}
      {{ range .packages.work.linux.casks -}}
        tap {{ . | quote }}
      {{ end -}}
    {{ end -}}
  {{ end -}}
{{ end -}}

# Mas
{{ if and (eq .chezmoi.os "darwin") (.headless) -}}
  {{ range $k, $v := .packages.personal.darwin.mas }}
    mas {{ dig $v "name" | quote }}, id: {{ dig $v "id" }}
  {{ end -}}
{{ end -}}

EOF
